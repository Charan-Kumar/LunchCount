<center><h2>Food Count of This Month</h2></center>
<div id="user_table" class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Count</th>
                                
                </tr>
              </thead>
              <tbody>
              <% for i in Date.today.beginning_of_month..Date.today.end_of_month %>
                <tr <% if i == Date.today%>
                      style="color:red;font-weight:bold;"
                    <% end %>
                > 
                <td><%= i.strftime("%d-%m-%Y") %></td>
                <% flag =0%>
                <td><% @fc.each do |f|%>
                      <% if f[0]==i%>
                        <%= f[1]%>
                        <% flag =1%>
                        <%break%>
                      <% end %>
                    <% end %>
                    <% if(flag ==0)%>
                    0
                    <%end%>
                </td>
                </tr>
              <% end %>



              
              </tbody>
        </table>
</div>