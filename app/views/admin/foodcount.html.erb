<center><h2>Food Count of This Month</h2></center>
<div id="user_table" class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Count</th>
                                
                </tr>
              </thead>
              <tbody>
              <% @fc.each do |c|%>
                <tr
                  <%if c[0] == @today%>
                    style="color:red;text-decoration:underline;background-color: pink;"
                  <% end %>>
                  <td><%= c[0]%></td>
                  <td><%= c[1] %></td>
                </tr>
              <% end %>
              </tbody>
        </table>
</div>